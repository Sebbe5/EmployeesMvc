<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
</head>
<body style="margin: 0;">
    <header class="container-fluid w-100">
        <nav class="navbar navbar-expand-lg px-5 row text-center">
            <h1 class="col text-center">Employees</h1>
            <div class="navbar-nav col justify-content-center">
                <a class="nav-item nav-link" asp-controller="Home" asp-action="Index">Index</a>
                <a class="nav-item nav-link" asp-controller="Home" asp-action="CreateEmployee">Create Employee</a>
            </div>
        </nav>



    </header>
    <main style="padding: 1rem 0 1rem 1rem;">
        <div>
            @RenderBody()
        </div>
    </main>
    <footer style="background-color: lightgray; padding: 1rem;">
        <div style="width:100%; display:inline-grid; grid-template-columns: 1fr 1fr; justify-content:space-between;">
            <partial name="_TimeBox" />
            <span style="text-align:end">&copy; Employee</span>
        </div>

    </footer>
    @RenderSection("scripts", false)
</body>
</html>
