<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
</head>
<body style="margin: 0;">
    <header style="background-color: lightgray; padding: 1rem 0 1rem 1rem;">
        <nav >
            <h1 style="margin-top: .1rem;">Employees</h1>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Index</a></li>
                <li><a asp-controller="Home" asp-action="CreateEmployee">Create Employee</a></li>
            </ul>
        </nav>
    </header>
    <main style ="padding: 1rem 0 1rem 1rem;">
        <div >
            @RenderBody()
        </div>
    </main>
    <footer style="background-color: lightgray; padding: 1rem;">
        <div style="width:100%; display:inline-grid; grid-template-columns: 1fr 1fr; justify-content:space-between;">
            <partial name="_TimeBox"/>
            <span style="text-align:end">&copy; Employee</span>
        </div>
        
    </footer>
    @RenderSection("scripts", false)
</body>
</html>
